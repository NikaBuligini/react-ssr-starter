{
  "name": "react-ssr-starter",
  "version": "2.0.0",
  "description": "React app starter with server side rendering. Types checked with Flow",
  "main": "index.js",
  "repository": "https://github.com/ggogobera/react-ssr-starter.git",
  "author": "Goga Gogoberishvili <ggogoberishvili@outlook.com> (https://github.com/ggogobera)\"",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development babel-node server",
    "start:serv": "cross-env NODE_ENV=development webpack --config config/webpack.config.server.js",
    "flow:build": "flow-typed install",
    "webpack:test-client": "cross-env NODE_ENV=production webpack --config ./config/webpack.config.js",
    "webpack:test-server": "cross-env NODE_ENV=production webpack --config ./config/webpack.config.server.js",
    "webpack:test": "yarn webpack:test-client && yarn webpack:test-server"
  },
  "dependencies": {
    "compression": "^1.7.3",
    "dotenv": "^6.2.0",
    "dotenv-expand": "^4.2.0",
    "express": "^4.16.4",
    "helmet": "^3.15.1",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-helmet": "^5.2.0",
    "react-loadable": "^5.5.0",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.6.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@svgr/webpack": "^4.1.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-file-loader": "^1.1.1",
    "babel-plugin-inline-react-svg": "^1.0.1",
    "babel-plugin-styled-components": "^1.10.0",
    "case-sensitive-paths-webpack-plugin": "^2.2.0",
    "cross-env": "^6.0.3",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^3.0.1",
    "flow-bin": "^0.94.0",
    "flow-typed": "^2.5.1",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "react-dev-utils": "^7.0.3",
    "react-hot-loader": "^4.6.5",
    "terser-webpack-plugin": "^1.2.2",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpack-dev-middleware": "^3.5.2",
    "webpack-dev-server": "^3.1.14",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-node-externals": "^1.7.2"
  },
  "nodemonConfig": {
    "ignore": [
      "build/*"
    ]
  },
  "browserslist": [
    "> 0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "rules": {
      "no-console": "warn",
      "react/prop-types": "off",
      "react/sort-comp": "warn",
      "react/jsx-pascal-case": "warn",
      "react/self-closing-comp": "warn",
      "react/no-direct-mutation-state": "warn",
      "react/no-redundant-should-component-update": "warn",
      "react/no-array-index-key": "error",
      "react/no-did-mount-set-state": "error",
      "react/no-did-update-set-state": "error",
      "react/no-will-update-set-state": "error",
      "react/no-access-state-in-setstate": "error"
    },
    "settings": {
      "react": {
        "createClass": "createReactClass",
        "pragma": "React",
        "version": "detect"
      }
    }
  },
  "prettier": {
    "parser": "babel-flow",
    "printWidth": 100,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  }
}
